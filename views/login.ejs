<%- include("templates/header") %>

    <div class="container p-5">
        <form action='/login' method='POST' class="col-5 mx-auto">
            <h2> <%= lang.login %> </h2>
            <div class="mb-3">
                <label for="inputEmail" class="form-label"> <%= lang.email %> </label>
                <input type="text" class="form-control" name="email" id="inputEmail" required>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label"> <%= lang.password %> </label>
                <input type="password" class="form-control" name="password" id="inputPassword" required>
            </div>
            <button type="submit" value="submit" class="btn btn-primary"> <%= lang.submit %> </button>
            <p class="d-inline-block float-end">
                <%= lang.no_account %> <a href="/signup"> <%= lang.signup_here %> </a>
            </p>
            <p class="text-danger fw-medium">
                <%= msg %>
            </p>
        </form>
    </div>


    <%- include("templates/footer") %>